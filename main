<!DOCTYPE html>
<html lang="ru">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Модальное окно</title>
<style>
/* простая стилизация модалки */
.modal {
  display: none;
  position: fixed;
  top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  justify-content: center; align-items: center;
}
.modal-content {
  background: #fff; padding: 20px; border-radius: 8px; width: 90%; max-width: 400px;
}
</style>
</head>
<body>

<div class="modal" id="myModal">
  <div class="modal-content">
    <h2>Заполните данные</h2>
    <form id="myForm">
      <label>Ваше имя:<br><input type="text" name="name" required></label><br><br>
      <label>Email:<br><input type="email" name="email" required></label><br><br>
      <button type="submit">Отправить</button>
    </form>
  </div>
</div>

<script>
// проверяем URL
const urlParams = new URLSearchParams(window.location.search);
if (urlParams.get('showModal') === 'true') {
  document.getElementById('myModal').style.display = 'flex';
}

// обработка формы
document.getElementById('myForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  const data = Object.fromEntries(formData.entries());

  // отправляем на вебхук
  await fetch('https://hook.make.com/ТВОЙ_WEBHOOK_ID', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  });

  alert('Данные отправлены!');
  // можно закрыть модалку или перенаправить
  document.getElementById('myModal').style.display = 'none';
});
</script>

</body>
</html>
